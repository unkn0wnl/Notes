<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="consoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-4level] [%d{yyyy-MM-dd HH:mm:ss.SSS}]  %-4L %-40c{1} %msg%n"/>
        </Console>
        <File name="fileJsonAppender" fileName="./logs/current_state_log.json">
            <JsonLayout compact="true" eventEol="true" properties="false" stacktraceAsString="true"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info" additivity="false">
            <AppenderRef ref="consoleAppender"/>
<!--            <AppenderRef ref="fileJsonAppender"/>-->
        </Root>
    </Loggers>
</Configuration>